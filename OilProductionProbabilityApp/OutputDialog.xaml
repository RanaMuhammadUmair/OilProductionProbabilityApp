<Window x:Class="BayesTheoremCalculator.OutputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View File Dialog" Height="200" Width="800">
    <Grid>
        <TextBlock Text="Congrats! " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10"/>
        <TextBlock Name="MessageTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10"/>

        <TextBlock Text="CSV File Path:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40"/>
        <TextBlock Name="CsvFilePathLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,40"/>

        <Button Content="Open Folder" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,10,0"
                Click="OpenFolderButton_Click"/>
        <Button Content="Close" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,70,10,0"
                Click="CloseButton_Click" Width="75"/>
    </Grid>
</Window>
